doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title EduMate
    style.
      * {
        font-family: sans-serif;
        margin:0;
        border:0;
      }
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background-color: #212F3C;
        color: #FFFFFF;
      }
      nav ul {
        list-style: none;
        display: flex;
      }
      nav ul li a {
        color: #FFFFFF;
        text-decoration: none;
        margin-left: 20px;
        font-weight: bold;
      }
      nav ul li a:hover {
        color: #F04848;
      }
      .hero {
        background-image: url("https://img.freepik.com/free-photo/education-concept-student-studying-brainstorming-campus-concept-close-up-students-discussing-their-subject-books-textbooks-selective-focus_1418-627.jpg?w=996&t=st=1679689085~exp=1679689685~hmac=e3cca6d7d6a130e142f48d55f445c084352c87eb29ca74c65e379cb18c2cab2f");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        padding: 100px;
        text-align: center;
        color: #FFFFFF;
      }
      .hero h1 {
        font-size: 48px;
        margin-bottom: 30px;
      }
      .hero p {
        font-size: 20px;
        margin-bottom: 40px;
      }
      .hero input[type="text"] {
        width: 60%;
        padding: 10px;
        margin-right: 10px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        outline: none;
      }
      .hero button[type="submit"] {
        background-color: #F04848;
        color: #FFFFFF;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
      }
      .categories {
        padding: 50px;
        background-color: #FFFFFF;
        text-align: center;
      }
      .categories h2 {
        font-size: 36px;
        margin-bottom: 30px;
      }
      .categories ul {
        list-style: none;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin: 0;
        padding: 0;
      }
      .categories li {
        margin: 10px;
      }
      .categories li a {
        text-decoration: none;
        color: #1A2238;
        font-weight: bold;
        border: 2px solid #1A2238;
        border-radius: 5px;
        padding: 10px 20px;
        transition: all 0.3s ease-in-out;
      }
      .categories li a:hover {
        background-color: #1A2238;
        color: #FFFFFF;
      }
      footer {
        background-color: #1A2238;
        color: #FFFFFF;
        text-align: center;
        padding: 20px;
        font-size: 14px;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
      
    link(rel="stylesheet", href="style.css")
