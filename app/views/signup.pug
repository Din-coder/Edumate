extends layout 
block content
    div.row(style="margin-top:40px;")
        div.col-sm-2
        div.col-sm-8
            card
                form(style="margin: 0 auto; max-width: 600px; padding: 50px; background-color: #FFFFFF; text-align: center; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);")
                    h1(style="font-size: 36px; margin-bottom: 30px;") SIGNUP
                    label(for="email") Email
                    input(type="email", name="email", style="display: block; width: 100%; padding: 10px; margin-bottom: 20px; font-size: 16px; border: 2px solid #CCCCCC; border-radius: 5px; outline: none;", required)
                    label(for="password") Password
                    input(type="password", name="password", style="display: block; width: 100%; padding: 10px; margin-bottom: 20px; font-size: 16px; border: 2px solid #CCCCCC; border-radius: 5px; outline: none;", required)
                    label(for="password") Re-Enter Password
                    input(type="password", name="password", style="display: block; width: 100%; padding: 10px; margin-bottom: 20px; font-size: 16px; border: 2px solid #CCCCCC; border-radius: 5px; outline: none;", required)
                    input(type="submit", value="Sign Up", style="background-color: #F04848; color: #FFFFFF; border: none; border-radius: 5px; padding: 10px 20px; font-size: 16px; cursor: pointer;")
                    p Already have an account?
                    a(href="/login-page", style="font-size: 16px;") Login
        div.col-sm-2