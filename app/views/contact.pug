extends layout
block content 
    section.contact-us
        div.container
          div.row
            div.col-md-6
              img(src='images/contactus.jpg', alt='Image of our team', style="height: 380px; width: 400px;")
            div.col-md-6
              h3 Contact Us
              form(action='/send-email', method='POST')
                div.form-group
                  label(for='name') Name
                  input.form-control(type='text', id='name', name='name')
                div.form-group
                  label(for='email') Email
                  input.form-control(type='email', id='email', name='email')
                div.form-group
                  label(for='message') Message
                  textarea.form-control(id='message', name='message')
                button.btn.btn-primary(type='submit') Submit