extends layout

block content
  .editprofilecontainer
    .profile-header
      img.profile-image(src="images/profile.png" alt="Profile Image")
      h2 #{user.username}
      p.joined-on Joined on: #{user.joined_date}
    .profile-body
      h3 Edit Profile
      form(action='/update-profile/${user.id}' method="POST")
        label(for="firstname") First Name
        input(type="text" name="firstname" value= user.firstname)
        label(for="lastname") Last Name
        input(type="text" name="lastname" value= user.lastname)
        label(for="email") Email
        input(type="email" name="email" value= user.email)
        label(for="age") Age
        input(type="number" name="age" value= user.age)
        label(for="occupation") Occupation
        input(type="text" name="occupation" value= user.occupation)
        label(for="username") Username
        input(type="text" name="username" value= user.username)
        label(for="password") Password 
        input(type="text" name="password" value= user.password)
        button(type="submit") Update Profile